{
  "name": "fila-zero",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @fila-zero/api",
    "dev:web": "npm run dev -w @fila-zero/web",
    "dev:api": "npm run dev -w @fila-zero/api",
    "dev:mobile": "npm run start -w @fila-zero/mobile",
    "build": "npm run build -w @fila-zero/api && npm run build -w @fila-zero/web",
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws"
  }
}

